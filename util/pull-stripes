clone=n
build=n
dir=.

if [ "x$1" = x-c ]; then
    clone=y
    shift
fi

if [ "x$1" = x-b ]; then
    build=y
    shift
fi

if [ $# != 0 ]; then
    echo Running in directory $1
    cd $1
fi

cd $dir
dirs=`echo '
    stripes-connect
    stripes-components
    stripes-smart-components
    stripes-react-hotkeys
    stripes-logger
    stripes-form
    stripes-core
    stripes-cli
    stripes-sample-platform
    stripes-demo-platform
    folio-testing-platform
    ui-okapi-console
    ui-users
    ui-inventory
    ui-eholdings
    ui-checkin
    ui-checkout
    ui-circulation
    ui-organization
    ui-developer
    ui-plugin-example
    ui-plugin-find-user
    ui-requests
    ui-search
    ui-testing
    ui-trivial
    ui-items
    eslint-config-stripes
'`

if [ $clone = y ]; then
    echo "$0: cloning"
    for i in $dirs; do
        if [ -d $i ]; then
	    echo "*** skipping '$i': aleady exists"
	else 
	    git clone git@github.com:folio-org/$i.git
	fi
    done
    exit
fi

for i in $dirs; do
    (
        cd $i
        branch=`git branch | sed -n 's/^\* //p'`
	echo "=== $i ($branch) ==="
        if [ "x$branch" != xmaster -a "x$branch" != xdev -a "x$branch" != x`whoami` ]; then
            echo "*** on branch '$branch': doing nothing"
        else
            if git status | grep 'nothing to commit' > /dev/null; then
                if git status | grep 'Your branch is ahead' > /dev/null; then
                    echo "*** some committed changes to push: doing nothing"
                else
                    git pull
                    if [ $build = y ]; then
                        case $i in
                            *-platform) echo "No need to build platform module";;
                            *) yarn install;;
                        esac
                    fi
                fi
            else
                echo "*** some changes to commit: doing nothing"
            fi
        fi
    )
done
